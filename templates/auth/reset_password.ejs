<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<title>
		<%= i18n.__('MSG_RESET_PASSWORD_TITLE') %>
	</title>
	<link rel="icon" type="image/x-icon" href="/images/default_favicon.ico">

	<!-- Global stylesheets -->
	<link href="https://fonts.googleapis.com/css?family=Roboto:400,300,100,500,700,900" rel="stylesheet"
		type="text/css">
	<link href="/global_assets/css/icons/icomoon/styles.min.css" rel="stylesheet" type="text/css">
	<link href="/assets/css/all.min.css" rel="stylesheet" type="text/css">
	<!-- /global stylesheets -->

	<!-- Core JS files -->
	<script src="/global_assets/js/main/jquery.min.js"></script>
	<script src="/global_assets/js/main/bootstrap.bundle.min.js"></script>
	<!-- /core JS files -->

	<!-- Theme JS files -->
	<script src="/assets/js/app.js"></script>

	<script src="/global_assets/js/plugins/forms/validation/validate.min.js"></script>

	<script src="/global_assets/js/demo_pages/login_validation.js"></script>
	<script src="/global_assets/js/plugins/notifications/jgrowl.min.js"></script>
	<script src="/global_assets/js/plugins/notifications/noty.min.js"></script>
	<script>
		const _componentNoty = function (text, type) {
			if (typeof Noty == 'undefined') {
				console.warn('Warning - noty.min.js is not loaded.');
				return;
			}

			// Override Noty defaults
			Noty.overrideDefaults({
				theme: 'limitless',
				layout: 'topRight',
				type: 'alert',
				timeout: 2500
			});

			return new Noty({ text, type }).show();
		};
	</script>
	<script>
		$(document).ready(function () {
			let submitBtn = jQuery('#submit-reset');
			let thisForm = jQuery('#form-reset');

			submitBtn.click(function () {
				let password = thisForm.find('input[name="password"]').val();
				let repet_password = thisForm.find('input[name="repeat_password"]').val();

				if (password === '') {
					_componentNoty(JSON.parse('<%- JSON.stringify(i18n.__("MSG_PASSWORD_REQUIRED")) %>'), 'error');
					thisForm.find('input[name="password"]').focus();
					return false;
				}

				if (password.length < 5 || password.length > 20) {
					_componentNoty(JSON.parse('<%- JSON.stringify(i18n.__("MSG_PASSWORD_LIMIT_CHARACTERS")) %>'), 'error');
					thisForm.find('input[name="password"]').focus();
					return false;
				}

				if (repet_password === '') {
					_componentNoty(JSON.parse('<%- JSON.stringify(i18n.__("MSG_REPEAT_PASSWORD_REQUIRED")) %>'), 'error');
					thisForm.find('input[name="repeat_password"]').focus();
					return false;
				}

				if (repet_password !== password) {
					_componentNoty(JSON.parse('<%- JSON.stringify(i18n.__("MSG_REPEAT_PASSWORD_DIFFERENT_PASSWORD")) %>'), 'error');
					thisForm.find('input[name="repeat_password"]').focus();
					return false;
				}

				thisForm.submit();
			});
		});

	</script>
	<!-- /theme JS files -->
</head>

<body>
	<!-- NAV content -->
	<div class="navbar navbar-expand-lg navbar-static">
		<div class="d-flex flex-1 d-lg-none">
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-mobile">
				<i class="icon-paragraph-justify3"></i>
			</button>
			<button class="navbar-toggler sidebar-mobile-main-toggle" type="button">
				<i class="icon-transmission"></i>
			</button>
		</div>
		<div class="navbar-brand text-center text-lg-left" style="padding-top: 0.6rem; padding-bottom: 0.6rem;">
			<a href="/" class="d-inline-block">
				<img src="/images/logo-vmg.png" class="d-none d-sm-block" alt=""
					style="height: 36px !important;">
				<img src="/images/logo-vmg.png" class="d-sm-none" alt="" style="height: 36px !important;">
			</a>
		</div>
		<div class="collapse navbar-collapse order-2 order-lg-1" id="navbar-mobile">
		</div>
		<div class="d-flex justify-content-end align-items-center flex-1 flex-lg-0 order-1 order-lg-2">
			<ul class="navbar-nav flex-row">
				<li class="nav-item nav-item-dropdown-lg dropdown">
					<a href="#" class="navbar-nav-link navbar-nav-link-toggler dropdown-toggle" data-toggle="dropdown"
						aria-expanded="false">
						<% if (i18n.getLocale()==='en' ) { %>
							<img src="/global_assets/images/lang/gb.png" class="img-flag" alt="">
							<span class="d-none d-lg-inline-block ml-2">English</span>
							<% } else { %>
								<img src="/global_assets/images/lang/vi.png" class="img-flag" alt="">
								<span class="d-none d-lg-inline-block ml-2">Vietnamese</span>
								<% } %>
					</a>

					<div class="dropdown-menu dropdown-menu-right">
						<a href="<%= envAuthUrl + '/reset-password?token='+token+'&lang=en' %>"
							class="dropdown-item <%= (i18n.getLocale() === 'en') ? 'active' : '' %>" data-lang="en">
							<img src="/global_assets/images/lang/gb.png" class="img-flag" alt="">
							English
						</a>
						<a href="<%= envAuthUrl + '/reset-password?token='+token+'&lang=vi' %>"
							class="dropdown-item <%= (i18n.getLocale() === 'vi') ? 'active' : '' %>" data-lang="vi">
							<img src="/global_assets/images/lang/vi.png" class="img-flag" alt="">
							Vietnamese
						</a>
					</div>
				</li>
			</ul>
		</div>

	</div>
	<!-- NAV content -->

	<!-- Page content -->
	<div class="page-content">

		<!-- Main content -->
		<div class="content-wrapper">

			<!-- Inner content -->
			<div class="content-inner">

				<!-- Content area -->
				<div class="content d-flex justify-content-center align-items-center">

					<!-- Unlock form -->
					<form class="login-form" action="<%= envAuthUrl %>/reset-password" method="POST" id="form-reset">
						<input type="hidden" name="token" value="<%= token %>" />

						<div class="card mb-0">
							<div class="card-body">
								<div class="text-center">
									<div class="card-img-actions d-inline-block mb-3">
										<img class="rounded-circle" src="<%= userLogo %>" width="160" height="160"
											alt="">
									</div>
								</div>

								<div class="text-center mb-3">
									<h6 class="font-weight-semibold mb-0">
										<%= userEmail %>
									</h6>
									<span class="d-block text-muted">
										<%= i18n.__('MSG_RESET_PASSWORD_DESCRIPTION') %>
									</span>
								</div>

								<div class="form-group form-group-feedback form-group-feedback-right">
									<input type="password" class="form-control" name="password"
										placeholder="<%= i18n.__('MSG_NEW_PASSWORD_PLACEHOLDER') %>" />
								</div>
								<div class="form-group form-group-feedback form-group-feedback-right">
									<input type="password" name="repeat_password" class="form-control"
										placeholder="<%= i18n.__('MSG_REPEAT_PASSWORD_PLACEHOLDER') %>" />
								</div>

								<button type="submit" id="submit-reset" class="btn btn-primary btn-block"><i
										class="icon-unlocked mr-2"></i>
									<%= i18n.__('MSG_RESET_PASSWORD_BTN') %>
								</button>
							</div>
						</div>
					</form>
					<!-- /unlock form -->

				</div>
				<!-- /content area -->

			</div>
			<!-- /inner content -->

		</div>
		<!-- /main content -->

	</div>
	<!-- /page content -->

</body>

</html>